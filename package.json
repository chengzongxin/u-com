{
  "name": "@chengzongxin/u-com",
  "version": "0.1.0",
  "private": false,
  "description": "A universal components for uniapp, weixin, douyin mini program",
  "author": "8876142@qq.com",
  "main": "lib/u-com.umd.min.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
